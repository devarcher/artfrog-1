<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <!-- <link rel="stylesheet" href="./CSS/indexStyle.css"> -->
    <link rel="stylesheet" href="./CSS/landingStyle.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap"
      rel="stylesheet"
    />
    <title>ArtFrog Dashboard</title>
  </head>

  <body>
    <header>
      <img src="./img/v2_web/ArtFrogLogo-02.svg" />
    </header>

    <main>
      <div class="container">
        <div class="titleBox">
          <h1>Classes</h1>
          <button>Add Class</button>
        </div>
        <div class="infoContainer">
          <div class="infoLine">
            <div class="infoText">Pottery: M/W | 3pm - 6pm | Jan 5 - Mar 1</div>
            <div class="buttonBox">
              <button>Students</button>
              <button>Mail All</button>
              <button>Edit</button>
              <button>Remove</button>
            </div>
            <% for(let i=0; i < dataGroup.classes.length; i++) { %>
            <h3><%= dataGroup.classes[i].class_name %></h3>
            <% } %> 
          </div>
        </div>
      </div>
      <div class="container">
        <div class="titleBox">
          <h1>Students</h1>
        </div>
      </div>
      <div class="container">
        <div class="titleBox">
          <h1>Teachers</h1>
        </div>
        <div>
        <% for(let i=0; i < dataGroup.teachers.length; i++) { %>
          <h3><%= dataGroup.teachers[i].first_name %> <%= dataGroup.teachers[i].last_name %></h3>
        <% } %> 
        </div>
      </div>
      <div class="container">
        <div class="titleBox">
          <h1>Board Members</h1>
        </div>
      </div>
      <div class="container">
        <div class="titleBox">
          <h1>Events</h1>
        </div>
      </div>
    </main>
  </body>
</html>