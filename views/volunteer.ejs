<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="../CSS/indexStyle.css" />
    <link rel="stylesheet" href="../CSS/indexStyle_Desktop.css" />
    <link rel="stylesheet" href="../CSS/volunteerStyle.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css"
    />
    <link
      rel="stylesheet"
      media="screen"
      href="https://fontlibrary.org/face/hanken"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Montserrat&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:700&display=swap"
      rel="stylesheet"
    />
    <title>Volunteer Form</title>
  </head>
  <body>

      <a href="#main-content" id = "skipLink" aria-label = 'skip navigation link' class="visible-hidden visible-hidden:focus">Skip Navigation</a>
    <!-- Copy and paste Header -->
   
    <% include ./partials/headers.ejs %>

    <main id="main-content" class="container">

        <h1 id="volunteerForm">Volunteer Page</h1>
        <p class="instructions">Thank you for your interest in volunteering with ArtFrog. Please fill out this form so we can get to know you a little better. We'll have a look at your submission and be we'll be in touch soon.</p>

<section class="form-container">
      <form method="POST" id="form" class="formStyle" novalidate>
        <fieldset class="fSet">
          <legend class="legendTitle">Introduce Yourself</legend>

          <p>* = Required</p>

          <div class="fieldWrap">
            <label for="firstName">* First Name:</label>
            <input
              id="firstName"
              class="validate"
              type="text"
              name="firstName"
              aria-required="true"
              autocomplete="given-name"
              data-error="First Name"
              data-iname="first_name"
              data-number="0"
            />
          </div>

          <div class="fieldWrap">
            <label for="lastName">* Last Name:</label>
            <input
              id="lastName"
              class="validate"
              type="text"
              name="lastName"
              aria-required="true"
              autocomplete="family-name"
              data-error="Last Name"
              data-iname="last_name"
              data-number="1"
            />
          </div>
     
          <div class="fieldWrap">
            <label for="phone">* Phone: (###)###-####</label>
            <input
              id="phone"
              class="validate phone"
              type="text"
              name="phone"
              data-error="Phone"
              aria-required="true"
              autocomplete="tel"
              data-iname="phone"
              data-number="5"
            />
          </div>

          <div class="fieldWrap">
            <label for="email">* Email: </label>
            <input
              type="email"
              name="email"
              id="email"
              class="validate"
              aria-required="true"
              autocomplete="email"
              data-error="Email"
              data-iname="email"
              data-number="6"
            />
          </div>

        <div class='textAreaContent'>
          <label class = 'textAreaContentLabel' for="interested">* How are you interested in helping?:</label><br>
          <textarea 
            rows="8"
            id="interested" 
            aria-required="true"
            name="interest"
            data-number="7"
            data-error="Interest Message"
          ></textarea>
        </div>

         <div class='textAreaContent'>
          <label class = 'textAreaContentLabel' for="experience">* Tell us about your volunteer experience:</label><br>
          <textarea 
            rows="8"
            id="experience" 
            aria-required="true"
            name="experience"
            data-number="8"
            data-error="Experience Message"
          ></textarea>
        </div>

        <div class="buttonDiv">
          <button type="submit" form="form" value="Submit">Click to Submit Volunteer Form</button>
        </div>
      </form>
    </section>
    </main>


    <% include ./partials/footers.ejs %>
    <script src="./javaScript/nav.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="./javaScript/forms/volunteer.js"></script>
  </body>
</html>