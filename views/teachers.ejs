<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="./CSS/indexStyle.css" />
    <link rel="stylesheet" href="./CSS/indexStyle_Desktop.css" />
    <link rel="stylesheet" href="./CSS/classStyle.css" />
    <link rel="stylesheet" href="./CSS/teacherStyle.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css"
    />
    <link
      rel="stylesheet"
      media="screen"
      href="https://fontlibrary.org/face/hanken"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Montserrat&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:700&display=swap"
      rel="stylesheet"
    />
    <title>ArtFrog Teachers</title>
  </head>

  <body>
    <!-- Skip Link -->
    <a href="#main-content" id = "skipLink" aria-label = 'skip navigation link' class="visible-hidden visible-hidden:focus">Skip Navigation</a>

    <!-- Header ArtFrog logo and main navigation links here -->
    <% include ./partials/headers.ejs %>

    <main id="main-content">
      <!-- Hero Image for Art Frog Home Page     -->
      <section id="heroArt" aria-labelledby="ArtFrogMission">
        <div class="imageContainer">
          <picture>
            <source
              media="(max-width: 600px)"
              srcset="..//img/v2_web/Mobile/mobile-3.jpg"
            />
            <img
              id="heroImg"
              class="image"
              src="../img/v2_web/Desktop/desktop-3.jpg"
              alt="Senior Woman Painting Wall Mural"
            />
          </picture>
        </div>

        <div class="content-container">
          <h1 id="ArtFrogMission">Current ArtFrog Teachers and Instructors</h1>
          <p>
            Below is a list of our current volunteers teachers and instructors.
          </p>
        </div>
      </section>

      <!-- Create a section to contain the list of course offerings (EJS Dynamic Data goes inside the section here-->

      <section id="currentTeachers" aria-labelledby="teacherName">
        <% for(var i=0; i < teachers.length; i++) { %>
        <div class="teacherContainer">
          <h1 id='teacherName'>
            <%= teachers[i].first_name %> <%=
            teachers[i].last_name %>
          </h1>
          <div>
            <p><%= teachers[i].bio %></p>
          </div>
        </div>
        <% } %>
      </section>
      <!-- _<________________________________________________________-->
    </main>

    <% include ./partials/footers.ejs %>
    <script src="./javaScript/nav.js"></script>
  </body>
</html>
